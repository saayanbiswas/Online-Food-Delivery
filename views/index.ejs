<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <% for(var i=0;i<product.length;i++){ %>
            <div class="col-lg-4 col-sm-6">
                <div class="card" style="margin-bottom: 10px;">
                    <img style="height: 25rem;" src="<%= product[i].imagePath %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= product[i].title %></h5>
                      <p class="card-text description"><%= product[i].description %></p>
                      <div>
                          <div class="price pull-left">Rs <%= product[i].price %></div>
                        <a href="/add-to-cart/<%=product[i]._id  %>" class="pull-right btn btn-success">Add to Cart</a>
                      </div>
                     
                    </div>
                  </div>
            </div>
        <%}%>
    </div>
</div>

<%- include("partials/footer") %>
